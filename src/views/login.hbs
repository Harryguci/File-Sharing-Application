<div class="container my-5">
    <h1 class="fw-bold text-center">Login</h1>
    <form action="/login" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">username</label>
            <input type="text" class="form-control" name="username" id="username" aria-describedby="username-help"
                placeholder="">
            <small id="username-help" class="form-text text-muted">Nhập Email của bạn</small>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="password">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </form>
</div>