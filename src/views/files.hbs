<div class="container my-5">
    <div class="row">
        <h1>Tất cả file trong: {{page}}</h1>
    </div>
    <div class="row">
        <div class="col-12 col-md-10">
            <div class="row">
                {{#each file}}
                <div class="col-12 col-md-6">
                    <div class="row">
                        <div class="item">
                            <div class="">
                                <h3 class="">
                                    <a target="_blank" href="/Documents/{{this.type}}/{{this.name}}">{{this.name}}</a>
                                </h3>
                                <span>Thể loại: <a href="/files/{{this.type}}"
                                        class="text-primary fw-bold">{{this.type}}</a></span>
                            </div>
                            {{#if this.description}}
                            <div class="row">{{this.description}}</div>
                            {{/if}}
                            {{#if this.image}}
                            <div class="thumbnail">
                                <img src="/Documents/{{this.type}}/{{this.name}}" alt="Image">
                            </div>
                            {{/if}}
                            <div class="mt-3">
                                <form action="/files/delete" method="POST">
                                    <input type="hidden" name="name" value="{{this.name}}">
                                    <input type="hidden" name="type" value="{{this.type}}">
                                    <button type="submit"
                                        class="btn btn-outline-primary btn-delete mx-auto">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-12 col-md-2">
            <h2>Xem thêm</h2>
            <ul class="menu-file">
                <li>
                    <a href="/files/study" class="menu-item"><span>Học tập</span></a>
                </li>
                <li>
                    <a href="/files/code" class="menu-item"><span>Code</span></a>
                </li>
                <li>
                    <a href="/files/de-cuong" class="menu-item"><span>Đề cương</span></a>
                </li>
                <li>
                    <a href="/files/slide" class="menu-item"><span>Slide bài giảng</span></a>
                </li>
                <li>
                    <a href="/files/tieu-luan" class="menu-item"><span>Tiểu luận</span></a>
                </li>
                <li>
                    <a href="/files/other" class="menu-item"><span>Khác</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>

<script type="module" src="../javascript/files.js" defer></script>