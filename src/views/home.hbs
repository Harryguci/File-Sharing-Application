<div class="container my-5">
    <h1 class="fs-1 fw-bold text-primary">Home Page</h1>
    <hr>

    <div class="row mt-5">
        <div class="col-12 col-md-6">
            <form id="form-sharing" action="/upload" method="POST" enctype="multipart/form-data"
                onsubmit="submitFormSharing(event)">
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="type" class="form-label fs-3 fw-bold">Thể loại</label>
                        <select class="form-select form-select-lg" name="type" id="type">
                            <option selected>--Select--</option>
                            <option value="study">Học tập</option>
                            <option value="slide">Slide bài giảng</option>
                            <option value="code">Code</option>
                            <option value="deCuong">Đề cương</option>
                            <option value="tieuLuan">Tiểu luận</option>
                            <option value="other">Khác..</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="file" class="form-label fs-3 fw-bold">Choose file</label>
                    <input type="file" class="form-control" name="file_upload" id="file_upload" placeholder=""
                        aria-describedby="fileHelp">
                    <div id="fileHelp" class="form-text">Có thể chia sẻ file .doc, .docx, .pptx, .cpp,...</div>
                </div>
                <div class="mt-4 d-flex justify-content-start">
                    <button class="btn btn-outline-primary px-5 py-2" type="submit">Share</button>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <div class="menu-right" style="margin-left: 30px;">
                <h2 class="fw-bold">New files</h2>
                <ul class="mt-3">
                    {{#each fileNew}}
                    <li class="py-3 px-3 mb-3 bg-primary bg-opacity-10 rounded-1 position-relative">
                        <span class="badge bg-primary position-absolute fs-6"
                            style="top: -10px; right: -10px;">New!</span>
                        <h4>
                            <a target="_blank" href="/Documents/{{this.type}}/{{this.name}}">
                                {{this.name}}
                            </a>
                        </h4>
                        <p><b>Thể loại:</b> {{this.type}}</p>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="menu-right mt-5" style="margin-left: 30px;">
                <h2 class="fw-bold">Cũ hơn</h2>
                <ul class="mt-3">
                    {{#each file}}
                    <li class="py-3 px-3 mb-3 bg-primary bg-opacity-10 rounded-1 position-relative">
                        <h4>
                            <a target="_blank" href="/Documents/{{this.type}}/{{this.name}}">
                                {{this.name}}
                            </a>
                        </h4>
                        <p><b>Thể loại:</b> {{this.type}}</p>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
<script type="module" src="./javascript/main.js" defer></script>